<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:shape_radius="11dp"
    app:shape_solidColor="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_product"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:shapeAppearance="@style/circle11Image2"
        app:strokeColor="@color/white" />
    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_product"
        app:layout_constraintStart_toEndOf="@id/iv_product"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14dp"
        android:textColor="#1A1A1A"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_desc"
        app:layout_constraintStart_toStartOf="@+id/tv_product_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="￥"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/FE9520"
        android:layout_marginTop="10dp"
        app:layout_goneMarginTop="33dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_product_price02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_desc"
        app:layout_constraintStart_toEndOf="@+id/tv_product_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        android:textSize="16dp"
        android:textColor="@color/FE9520"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_product_ptnum"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="@color/FE9520"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        app:layout_constraintStart_toEndOf="@+id/tv_product_price02"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_desc" />

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/A8A8A8"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tv_product_title"
        app:layout_constraintEnd_toEndOf="@id/tv_product_title"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title"
        android:layout_marginTop="10dp" />
    
    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_free_play"
        app:layout_constraintStart_toStartOf="@+id/tv_product_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="免费播放"
        android:gravity="center"
        android:textColor="@color/white"
        app:shape_radius="15dp"
        app:shape_solidColor="@color/FE9520"
        android:layout_width="100dp"
        android:layout_height="30dp"/>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入"
        app:shape_radius="22dp"
        app:shape_solidColor="@color/white"
        app:shape_shadowSize="1dp"
        app:shape_shadowColor="@color/FE9520"
        android:textColor="@color/FE9520"
        android:textSize="13dp"
        android:paddingStart="23dp"
        android:paddingTop="5dp"
        android:paddingEnd="23dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

</com.hjq.shape.layout.ShapeConstraintLayout>