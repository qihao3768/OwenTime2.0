<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UpOrderActivity"
    android:background="@color/F5F5F5">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_orderleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.04"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_orderright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>
    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_ordertop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_startColor="#FE9520"
        app:shape_endColor="#FEAD20"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.hjq.bar.TitleBar
            android:id="@+id/title_order"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:title="确认订单"
            android:background="@color/transparent"
            app:titleColor="@color/white"
            app:leftTitleColor="@color/white"
            app:leftIconTint="@color/white"
            app:lineVisible="false"
            app:childPaddingHorizontal="15dp"/>
        <com.hjq.shape.layout.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_solidColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/title_order"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:shape_radius="11dp"
            android:padding="15dp">
            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/layout_address01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_radius="11.5dp"
                app:shape_solidColor="@color/FFECD6"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加地址"
                    android:textColor="@color/FE9520"
                    android:textSize="12dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/address_jump_icon"
                    android:layout_marginStart="5dp"/>
            </com.hjq.shape.layout.ShapeLinearLayout>

            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/F1A1A1A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/address_name"
                app:layout_constraintTop_toTopOf="@id/address_name"
                android:layout_marginStart="13dp"
                android:textSize="13dp"
                android:textColor="@color/F1A1A1A"/>
            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/layout_address02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shape_radius="11.5dp"
                app:shape_solidColor="@color/FFECD6"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/address_phone"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改地址"
                    android:textColor="@color/FE9520"
                    android:textSize="12dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/address_jump_icon"
                    android:layout_marginStart="5dp"/>

            </com.hjq.shape.layout.ShapeLinearLayout>
            <TextView
                android:id="@+id/tv_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/F666666"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/layout_address01"
                android:layout_marginTop="10dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/group_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="address_name,address_phone,layout_address02,tv_address_detail"/>
        </com.hjq.shape.layout.ShapeConstraintLayout>


    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_ordertitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:shape_solidColor="@color/white"
        app:shape_radius="11dp"
        app:layout_constraintTop_toBottomOf="@id/layout_ordertop"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/line_orderleft"
        app:layout_constraintEnd_toStartOf="@id/line_orderright">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_orderpic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/circle11Image2"
            app:strokeColor="@color/white"/>
        <TextView
            android:id="@+id/tv_ordertitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/F1A1A1A"
            app:layout_constraintStart_toEndOf="@id/iv_orderpic"
            app:layout_constraintTop_toTopOf="@id/iv_orderpic"
            app:layout_constraintEnd_toStartOf="@id/tv_price"
            android:maxLines="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/F1A1A1A"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_ordertitle"/>
        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×1"
            android:textColor="@color/A8A8A8"
            app:layout_constraintTop_toBottomOf="@id/tv_ordertitle"
            app:layout_constraintEnd_toEndOf="parent"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/layout_orderinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:shape_solidColor="@color/white"
        app:shape_radius="11dp"
        app:layout_constraintTop_toBottomOf="@id/layout_ordertitle"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/line_orderleft"
        app:layout_constraintEnd_toStartOf="@id/line_orderright">
        <TextView
            android:id="@+id/tv_orderlabel01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总计"
            android:textSize="15dp"
            android:textColor="@color/F666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/F1A1A1A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_orderlabel02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textSize="15dp"
            android:textColor="@color/F666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_orderlabel01"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="15dp"
            android:textColor="@color/F1A1A1A"
            app:layout_constraintTop_toTopOf="@id/tv_orderlabel02"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_orderlabel03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送服务"
            android:textSize="15dp"
            android:textColor="@color/F666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_orderlabel02"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通快递免邮"
            android:textSize="15dp"
            android:textColor="@color/F1A1A1A"
            app:layout_constraintTop_toTopOf="@id/tv_orderlabel03"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_orderlabel04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单备注"
            android:textSize="15dp"
            android:textColor="@color/F666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_orderlabel03"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="15dp"
            android:textColor="@color/CCCCCC"
            app:layout_constraintTop_toTopOf="@id/tv_orderlabel04"
            app:layout_constraintEnd_toEndOf="parent"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>
<com.hjq.shape.layout.ShapeConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shape_solidColor="@color/white"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent">
    <LinearLayout
        android:id="@+id/layout_ordertotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_orderjianshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计"
            android:textColor="@color/F1A1A1A"
            android:textSize="13dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="12dp"
            android:textColor="@color/FF4E4E"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/FF4E4E"/>
    </LinearLayout>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_ordersubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提交订单"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:shape_solidColor="@color/FFC482"
        app:layout_constraintStart_toEndOf="@id/layout_ordertotal"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:shape_radius="22dp"
        android:layout_marginStart="15dp"
        />

</com.hjq.shape.layout.ShapeConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>