<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="5.5dp"
        android:paddingBottom="5.5dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_home"
        android:background="@color/FE9520"
        android:visibility="gone"
        android:focusable="false"
        android:clickable="false">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.hjq.bar.TitleBar
            android:id="@+id/title_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="欧文时光"
            app:titleColor="@color/white"
            android:background="@color/FE9520"
            android:visibility="visible"
            android:focusable="false"
            android:clickable="false"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_home_head"
            android:layout_width="33dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,1:1"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearance="@style/circleImage"
            android:layout_marginStart="15dp"
            app:strokeColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_home"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_lineleft"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_lineright"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96"/>
            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintDimensionRatio="h,1:0.56"
                app:layout_constraintStart_toEndOf="@+id/home_lineleft"
                app:layout_constraintEnd_toStartOf="@+id/home_lineright"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:banner_indicator_space="5dp"
                app:banner_indicator_selected_color="@color/white"
                app:banner_indicator_normal_color="#50FFFFFF"
                app:banner_indicator_radius="2dp"
                app:banner_indicator_normal_width="12dp"
                app:banner_indicator_selected_width="12dp"
                app:banner_indicator_height="4dp"/>
            <!--app:layout_constraintDimensionRatio="h,1:0.15"-->
            <com.hjq.shape.layout.ShapeConstraintLayout
                android:id="@+id/layout_notice"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/home_banner"
                app:layout_constraintStart_toStartOf="@+id/home_banner"
                app:layout_constraintEnd_toEndOf="@id/home_banner"
                android:layout_marginTop="10dp"
                app:shape_radius="11dp"
                app:shape_solidColor="@color/FFF8F0"
                android:paddingStart="9.5dp"
                android:paddingEnd="9.5dp">
                <ImageView
                    android:id="@+id/iv_notice"
                    android:layout_width="35.5dp"
                    android:layout_height="45.5dp"
                    android:src="@drawable/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.youth.banner.Banner
                    android:id="@+id/notice_banner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_notice"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"/>

            </com.hjq.shape.layout.ShapeConstraintLayout>

            <com.hjq.shape.layout.ShapeConstraintLayout
                android:id="@+id/layout_playing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/layout_notice"
                app:layout_constraintEnd_toEndOf="@+id/layout_notice"
                app:layout_constraintTop_toBottomOf="@+id/layout_interval"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:shape_radius="5dp"
                app:shape_solidColor="@color/white"
                android:visibility="gone">
                <TextView
                    android:id="@+id/label_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_playing"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_playing_course"
                    android:layout_width="129dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="14.5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/aa"
                    app:layout_constraintTop_toBottomOf="@+id/label_playing"
                    app:shape_radius="11dp"
                    app:shape_gradientType="radial"
                    app:strokeColor="@color/white"
                    app:shapeAppearance="@style/circle11Image2"
                    android:transitionName="playing"/>


                <ImageView
                    android:id="@+id/iv_timer"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/time_icon"
                    app:layout_constraintStart_toStartOf="@+id/tv_playing_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_playing_title_sub"
                    app:layout_goneMarginStart="129dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tv_playing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/iv_timer"
                    app:layout_constraintTop_toTopOf="@+id/iv_timer"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_timer"
                    android:layout_marginStart="4.5dp"
                    android:text="02:26"
                    android:textSize="12dp"
                    android:textColor="#939393"/>
                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/playing_yueling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6BAFDA"
                    android:textSize="12dp"
                    android:gravity="center"
                    app:shape_radius="3dp"
                    app:shape_solidColor="#EBF7FF"
                    android:paddingTop="3.5dp"
                    android:paddingBottom="3.5dp"
                    android:paddingStart="9dp"
                    android:paddingEnd="9dp"
                    app:layout_constraintStart_toStartOf="@+id/iv_timer"
                    app:layout_constraintTop_toTopOf="@+id/iv_playing_course"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_playing_course"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_playing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#333333"
                    app:layout_constraintStart_toEndOf="@+id/iv_playing_course"
                    app:layout_constraintTop_toTopOf="@+id/iv_playing_course"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:text="第二集  阅读分享"/>

                <TextView
                    android:id="@+id/tv_playing_title_sub"
                    android:textSize="12dp"
                    android:textColor="#333333"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_playing_course"
                    app:layout_constraintTop_toBottomOf="@+id/tv_playing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.hjq.shape.view.ShapeButton
                    android:id="@+id/continue_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="18dp"
                    android:paddingStart="18dp"
                    android:paddingTop="5dp"
                    android:text="播放"
                    android:textSize="14dp"
                    android:textColor="#FE9520"
                    app:layout_constraintBottom_toBottomOf="@id/iv_playing_course"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shape_radius="20dp"
                    app:shape_solidColor="@color/white"
                    app:shape_strokeColor="@color/FE9520"
                    app:shape_strokeWidth="0.5dp" />

            </com.hjq.shape.layout.ShapeConstraintLayout>

            <TextView
                android:id="@+id/layout_interval"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_notice"
                android:layout_marginTop="10dp"
                android:background="@color/FAFAFA"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/layout_interval02"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_playing"
                android:background="@color/FAFAFA" />

            <TextView
                android:id="@+id/label_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_recommend"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/home_banner"
                app:layout_constraintTop_toBottomOf="@+id/layout_interval02"
                android:layout_marginTop="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/home_banner"
                app:layout_constraintEnd_toEndOf="@id/home_banner"
                app:layout_constraintTop_toBottomOf="@+id/label_recommend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_product"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="layout_playing,layout_interval"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>